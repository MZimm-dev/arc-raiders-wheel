<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <title>ARC Raiders Kartenrad</title>

  <style>
    body {
      margin: 0;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      font-family: Arial, sans-serif;
      background: #050816;
      color: #f5f5f5;
      text-align: center;
    }

    /* Logo */
    #logo {
      width: 240px;
      margin-bottom: 20px;
      filter: drop-shadow(0 0 10px rgba(255,255,255,0.3));
    }

    /* Pfeil */
    #pointer {
      width: 0;
      height: 0;
      border-left: 15px solid transparent;
      border-right: 15px solid transparent;
      border-bottom: 25px solid #ffcc00;
      margin-bottom: 10px;
      filter: drop-shadow(0 0 10px #ffcc00);
    }

    /* Rad */
    #wheel {
      width: 250px;
      height: 250px;
      border-radius: 50%;
      border: 6px solid #ffffff;
      display: flex;
      justify-content: center;
      align-items: center;
      cursor: pointer;
      user-select: none;
      transition: transform 3s ease-out;
      background: radial-gradient(circle at 30% 30%, #3d8bfd, #4c6fff, #8e4bff);
      box-shadow: 0 0 25px rgba(0, 0, 0, 0.6);
    }

    #wheel span {
      font-weight: bold;
      padding: 0 10px;
    }

    /* Ergebnis - groß & leuchtend */
    #result {
      margin-top: 25px;
      font-size: 1.9rem;
      font-weight: bold;
      color: #ffdd55;
      text-shadow: 
        0 0 10px #ffdd55,
        0 0 20px #ffaa00,
        0 0 30px #ff8800;
      opacity: 0;
      transition: opacity 0.6s ease-in-out;
    }

    small {
      margin-top: 10px;
      opacity: 0.7;
    }
  </style>
</head>

<body>

  <!-- ARC Logo -->
  <img src="arc-logo.jpg" id="logo" alt="ARC Raiders Logo">

  <h1>ARC Raiders Kartenrad</h1>

  <div id="pointer"></div>

  <!-- Rad -->
  <div id="wheel">
    <span>Klick zum Drehen</span>
  </div>

  <!-- Ergebnis -->
  <div id="result">Klicke auf das Rad, um eine Karte zu wählen.</div>

  <small>Karten: Damn Battlegrounds, The Spaceport, Buried City, Blue Gate</small>


  <script>
    const maps = [
      "Damm Battlegrounds",
      "The Spaceport",
      "Buried City",
      "Blue Gate"
    ];

    const wheel = document.getElementById("wheel");
    const result = document.getElementById("result");

    let isSpinning = false;
    let currentRotation = 0;

    wheel.addEventListener("click", () => {
      if (isSpinning) return;

      isSpinning = true;

      // sichtbare Ausgabe erstmal ausblenden
      result.style.opacity = 0;

      // Zufällige Karte
      const randomIndex = Math.floor(Math.random() * maps.length);
      const chosenMap = maps[randomIndex];

      // Drehung: 3–5 Umdrehungen
      const extraSpins = 3 + Math.random() * 2;
      const rotation = extraSpins * 360;

      currentRotation += rotation;

      wheel.style.transform = `rotate(${currentRotation}deg)`;

      setTimeout(() => {
        result.textContent = "Nächste Karte: " + chosenMap;
        result.style.opacity = 1;
        isSpinning = false;
      }, 3000);
    });
  </script>

</body>
</html>
